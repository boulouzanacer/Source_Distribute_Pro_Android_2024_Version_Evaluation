<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/param_co"
    android:visibility="visible"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlt_cnx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ip_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:contextClickable="false"
            android:hint="@string/adress_ip"
            app:errorMessage="@string/error_message_empty"
            app:errorType="empty"
            app:expandedHintEnabled="false"
            app:hintTextColor="@color/blue"
            app:startIconDrawable="@mipmap/ip">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:id="@+id/database_text"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contextClickable="false"
            app:errorMessage="@string/error_message_empty"
            app:errorType="empty"
            app:hintTextColor="@color/blue"
            app:startIconDrawable="@mipmap/database_ok"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            app:expandedHintEnabled="false"
            android:layout_below="@+id/ip_text"
            android:hint="@string/database">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/database"
                android:gravity="center"
                android:inputType="text"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btn_scanqr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/database_text"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:drawableEnd="@drawable/ic_qr_code_24_1"
            android:textAllCaps="false"
            android:text="ParamÃ¨tres connexion" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rtv4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/progress"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="43dp" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_marginTop="5dp"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:clickable="true"
        android:background="@color/white"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:focusable="true">


        <TextView
            android:id="@+id/descrip_code_depot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saisissez_ici_le_code_depot_pour_cette_appareil_veuillez_bien_confirmer_le_code_pour_viter_plutard_le_conflis_entre_les_depots"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:id="@+id/code_depot_lnr"
            android:layout_below="@+id/descrip_code_depot"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickListener"
            android:background="@drawable/import_export_selector"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UsingOnClickInXml">

            <TextView
                android:id="@+id/code_depot_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/code_depot"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


            <TextView
                android:id="@+id/code_depot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_000001"
                android:textAlignment="center"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/nom_depot_lnr"
            android:layout_below="@+id/code_depot_lnr"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickListener"
            android:background="@drawable/import_export_selector"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UsingOnClickInXml">

            <TextView
                android:id="@+id/nom_depot_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nom_depot_van"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


            <TextView
                android:id="@+id/nom_depot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textAlignment="center"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </LinearLayout>

        <View
            android:id="@+id/vieww"
            android:layout_marginTop="5dp"
            android:background="@color/gray"
            android:layout_below="@+id/nom_depot_lnr"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:id="@+id/code_vendeur_lnr"
            android:layout_below="@+id/vieww"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickListener"
            android:background="@drawable/import_export_selector"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UsingOnClickInXml">

            <TextView
                android:id="@+id/code_vendeur_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/code_vendeur"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


            <TextView
                android:id="@+id/code_vendeur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_000001"
                android:textAlignment="center"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nom_vendeur_lnr"
            android:layout_below="@+id/code_vendeur_lnr"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickListener"
            android:background="@drawable/import_export_selector"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UsingOnClickInXml">

            <TextView
                android:id="@+id/nom_vendeur_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nom_vendeur"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


            <TextView
                android:id="@+id/nom_vendeur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textAlignment="center"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_marginTop="5dp"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <Button
        android:id="@+id/check"
        style="@style/dialog_blue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:text="@string/tester_la_connexion" />
</LinearLayout>