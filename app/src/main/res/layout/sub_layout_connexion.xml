<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/param_co"
    android:visibility="gone"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlt_cnx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">



        <LinearLayout
            android:id="@+id/rtv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_height="25dp"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="@string/adress_ip" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginStart="3dp"
                android:src="@mipmap/ip"
                android:contentDescription="@string/icone_ip_adresse" />

            <EditText
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:id="@+id/ip"
                android:digits="0123456789."
                android:hint="@string/adress_ip"
                android:textColor="@color/cardview_dark_background"
                android:layout_gravity="center"
                tools:ignore="Autofill"
                 />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/rtv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rtv2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_height="25dp"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="@string/database" />
            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_marginStart="5dp"
                android:layout_height="25dp"
                android:src="@mipmap/database_ok"
                android:contentDescription="@string/icone_ip_adresse"/>

            <EditText
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/database"
                android:hint="@string/base_de_donn_es"
                android:textColor="@color/cardview_dark_background"
                android:layout_gravity="center"
                tools:ignore="Autofill"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rtv4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/progress"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="43dp" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_marginTop="5dp"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:clickable="true"
        android:background="@color/white"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:focusable="true">


        <TextView
            android:id="@+id/descrip_code_depot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saisissez_ici_le_code_depot_pour_cette_appareil_veuillez_bien_confirmer_le_code_pour_viter_plutard_le_conflis_entre_les_depots"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:id="@+id/code_depot_lnr"
            android:layout_below="@+id/descrip_code_depot"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickListener"
            android:background="@drawable/import_export_selector"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UsingOnClickInXml">

            <TextView
                android:id="@+id/code_depot_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/code_depot"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


            <TextView
                android:id="@+id/code_depot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_000001"
                android:textAlignment="center"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/code_vendeur_lnr"
            android:layout_below="@+id/code_depot_lnr"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickListener"
            android:background="@drawable/import_export_selector"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UsingOnClickInXml">

            <TextView
                android:id="@+id/code_vendeur_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/code_vendeur"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


            <TextView
                android:id="@+id/code_vendeur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_000001"
                android:textAlignment="center"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </LinearLayout>



        <View
            android:id="@+id/vieww"
            android:layout_marginTop="5dp"
            android:background="@color/gray"
            android:layout_below="@+id/code_depot_lnr"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>


    </RelativeLayout>
    <View
        android:layout_marginTop="5dp"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <Button
        android:id="@+id/check"
        style="@style/dialog_blue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/tester_la_connexion" />
</LinearLayout>