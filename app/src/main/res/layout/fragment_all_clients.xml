<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/violet">


        <LinearLayout
            android:weightSum="5"
            android:padding="5dp"
            android:id="@+id/layout_header"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:hint="@string/rechercher_client"
                android:inputType="text"
                android:id="@+id/search_field"
                android:autofillHints="" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_weight="0.75"
                android:id="@+id/scan"
                android:src="@drawable/ic_codebarre_scan"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_weight="0.75"
                android:id="@+id/cancel"
                android:src="@drawable/met_ic_clear"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <ListView
            android:id="@+id/list_client"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/layout_footer"
            android:layout_below="@+id/layout_header"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:divider="@color/violet"
            android:dividerHeight="10dp">

        </ListView>


        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/layout_footer"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/add_client"
                android:text="@string/ajouter_client"
                android:textAllCaps="false"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"
                app:icon="@drawable/ic_black_person_add_24"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>

