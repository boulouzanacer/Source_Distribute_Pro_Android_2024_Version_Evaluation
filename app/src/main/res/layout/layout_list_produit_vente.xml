<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/lnr_liste_produit_vente"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/entete_produit"
        android:padding="5dp"
        android:background="@color/contentDividerLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/textview2"
            android:text="@string/produits"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textview2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/textview3"
            android:text="@string/quantite"
            android:textStyle="bold"
            android:textAlignment="center"
            tools:ignore="RelativeOverlap" />


        <TextView
            android:id="@+id/textview3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="@string/p_u"
            android:textAlignment="center"
            android:textStyle="bold" />

    </RelativeLayout>
    <View
        android:background="@color/vert"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/view" />


    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/product_listview"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.baoyz.swipemenulistview.SwipeMenuListView>

    <com.github.paolorotolo.expandableheightlistview.ExpandableHeightListView
        android:id="@+id/expandable_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
    </com.github.paolorotolo.expandableheightlistview.ExpandableHeightListView>

</LinearLayout>