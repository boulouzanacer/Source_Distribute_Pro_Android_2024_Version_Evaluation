<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/lnr_liste_produit_vente"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/entete_produit"
        android:padding="5dp"
        android:background="@color/contentDividerLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview1"
            android:text="Produit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textview2"
            android:text="Quantite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="33dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/textview3" />


        <TextView
            android:id="@+id/textview3"
            android:text="P.U"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <View
        android:background="@color/vert"
        android:layout_below="@+id/entete_produit"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/view" />


    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/product_listview"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.baoyz.swipemenulistview.SwipeMenuListView>

    <com.github.paolorotolo.expandableheightlistview.ExpandableHeightListView
        android:id="@+id/expandable_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
    </com.github.paolorotolo.expandableheightlistview.ExpandableHeightListView>

</LinearLayout>