<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlt_export_achats"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="visible"
        android:onClick="onRelativeClick"
        android:background="@drawable/import_export_selector"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/exportt_achat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Exportation achats (Réseaux IP)"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black_overlay"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exportt_achat"
            android:layout_alignParentStart="true"
            android:clickable="false"
            android:text="Vous permet d'exporter les bons d'achats vers le serveur distant"
            android:textColor="@color/gray"
            android:textSize="12sp" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rlt_export_achats_ftp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="visible"
        android:onClick="onRelativeClick"
        android:background="@drawable/import_export_selector"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/exportt_achat_ftp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Exportation achats (Serveur FTP)"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black_overlay"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vous permet d'exporter les bons d'achat vers le serveur FTP"
            android:layout_below="@+id/exportt_achat_ftp"
            android:textSize="12sp"
            android:clickable="false"
            android:textColor="@color/gray"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlt_exported_achats"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="visible"
        android:onClick="onRelativeClick"
        android:background="@drawable/import_export_selector"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/exportted_achat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Bons d'achats exportés"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black_overlay"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exportted_achat"
            android:layout_alignParentStart="true"
            android:clickable="false"
            android:text="ça vous permet d'afficher les bons d'achats exportés avec la possibilité de suppression"
            android:textColor="@color/gray"
            android:textSize="12dp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlt_etata"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="gone"
        android:onClick="onRelativeClick"
        android:background="@drawable/import_export_selector"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/etat_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Etat d'achats"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black_overlay"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etat_a"
            android:layout_alignParentStart="true"
            android:clickable="false"
            android:text="ça vous permet de consulter la quantité des produits achetés ansi que le montant total, remise total... entre deux date donné."
            android:textColor="@color/gray"
            android:textSize="12dp" />

    </RelativeLayout>
</LinearLayout>