<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:clickable="true"
        android:id="@+id/param_pda"
        android:background="@color/white"
        android:focusable="true"
        tools:ignore="UselessParent">


        <View
            android:id="@+id/view"
            android:layout_marginTop="5dp"
            android:background="@color/gray"
            android:layout_below="@+id/code_depot_lnr"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            tools:ignore="UnknownIdInLayout" />


        <LinearLayout
            android:id="@+id/stock_moins_lnr"
            android:padding="5dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickListener"
            android:background="@drawable/import_export_selector"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UsingOnClickInXml">

            <CheckBox
                android:id="@+id/chkbx_stock_moins"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:text="@string/vente_avec_stock_moins"
                android:textColor="@color/black_overlay"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/stock_moins_lnr"
            android:padding="5dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickListener"
            android:background="@drawable/import_export_selector"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UsingOnClickInXml">

            <CheckBox
                android:id="@+id/chkbx_photo_pr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:text="@string/afficher_photo_produit_dans_la_vente"
                android:textColor="@color/black_overlay"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>