<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/blue"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:weightSum="9"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:background="@color/blue"
            android:layout_height="0dp">

            <TextView
                android:text="Nouveau produit"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="23sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


        <ScrollView
            android:layout_weight="7"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="13"
                android:orientation="vertical"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:weightSum="7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <ImageView
                        android:id="@+id/img_product"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:src="@mipmap/noimg"
                        android:layout_gravity="center"
                        android:layout_weight="4"
                        android:layout_margin="5dp" />

                    <LinearLayout
                        android:padding="10dp"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btn_select_from_gallery"
                            android:text="Gallery"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/btn_select_from_camera"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            android:text="Camera"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        app:errorMessage="@string/error_message_empty"
                        app:errorType="empty"
                        android:layout_weight="5"
                        android:hint="@string/code_produit"
                        app:expandedHintEnabled="false"
                        app:helperText="  "
                        android:layout_margin="5dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_codebarre"
                            android:gravity="center"
                            android:inputType="text"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <ImageButton
                        android:id="@+id/generate_codebarre"
                        android:layout_weight="1"
                        android:src="@drawable/baseline_generate_24"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <ImageButton
                        android:id="@+id/scan_codebarre"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_codebarre_white_24"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        app:errorMessage="@string/error_message_empty"
                        app:errorType="empty"
                        android:layout_weight="5"
                        android:hint="Reference"
                        app:expandedHintEnabled="false"
                        app:helperText="  "
                        android:layout_margin="5dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_reference"
                            android:gravity="center"
                            android:inputType="text"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <ImageButton
                        android:id="@+id/generate_reference"
                        android:layout_weight="1"
                        android:src="@drawable/baseline_generate_24"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <ImageButton
                        android:id="@+id/scan_reference"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_codebarre_white_24"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="0dp">


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        app:errorMessage="@string/error_message_empty"
                        app:errorType="empty"
                        android:layout_weight="5"
                        android:hint="@string/d_signation"
                        app:expandedHintEnabled="false"
                        app:helperText="  "
                        android:layout_margin="5dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_designation"
                            android:gravity="center"
                            android:inputType="text"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ly_nbr_colis_colissage_qte"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="0dp">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:hint="@string/colis"
                        app:expandedHintEnabled="false"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_colissage"
                            android:gravity="center"
                            android:maxLines="1"
                            android:inputType="numberSigned|numberDecimal"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:hint="@string/stock_ini"
                        android:enabled="true"
                        android:visibility="visible"
                        app:expandedHintEnabled="false"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_stock_ini"
                            android:gravity="center"
                            android:maxLines="1"
                            android:inputType="numberSigned|numberDecimal"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_prix_achat"
                    android:layout_weight="1"
                    android:weightSum="5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_input_prix_ht"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:visibility="visible"
                        android:hint="P achat (HT)"
                        app:expandedHintEnabled="false"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_prix_achat_ht"
                            android:gravity="center"
                            android:maxLines="1"
                            android:visibility="visible"
                            android:inputType="numberSigned|numberDecimal"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_input_tva"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:hint="Tva %"
                        android:visibility="visible"
                        app:expandedHintEnabled="false"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_tva"
                            android:gravity="center"
                            android:maxLines="1"
                            android:visibility="visible"
                            android:inputType="numberSigned|numberDecimal"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_input_prix_ttc"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:hint="P achat (TTC)"
                        app:expandedHintEnabled="false"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_prix_achat_ttc"
                            android:gravity="center"
                            android:maxLines="1"
                            android:inputType="numberSigned|numberDecimal"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnr_prix1"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_input_prix1_ht"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:visibility="visible"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:hint="Prix 1 (HT)"
                        app:expandedHintEnabled="false"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_prix1_ht"
                            android:gravity="center"
                            android:maxLines="1"
                            android:inputType="numberDecimal"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_input_prix1_ttc"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:hint="Prix 1 (TTC)"
                        app:expandedHintEnabled="false"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_prix1_ttc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:textStyle="bold" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnr_prix2"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:visibility="visible"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_input_prix2_ht"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:visibility="visible"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:hint="Prix 2 (HT)"
                        app:expandedHintEnabled="false"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_prix2_ht"
                            android:gravity="center"
                            android:maxLines="1"
                            android:inputType="numberDecimal"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_input_prix2_ttc"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:hint="Prix 2 (TTC)"
                        app:expandedHintEnabled="false"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_prix2_ttc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:textStyle="bold" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnr_prix3"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:visibility="visible"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_input_prix3_ht"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:hint="Prix 3 (HT)"
                        app:expandedHintEnabled="false"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_prix3_ht"
                            android:gravity="center"
                            android:maxLines="1"
                            android:inputType="numberDecimal"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_input_prix3_ttc"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:hint="Prix 3 (TTC)"
                        app:expandedHintEnabled="false"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_prix3_ttc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:textStyle="bold" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnr_prix4"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:visibility="visible"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_input_prix4_ht"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:hint="Prix 4 (HT)"
                        app:expandedHintEnabled="false"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_prix4_ht"
                            android:gravity="center"
                            android:maxLines="1"
                            android:inputType="numberDecimal"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_input_prix4_ttc"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:hint="Prix 4 (TTC)"
                        app:expandedHintEnabled="false"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_prix4_ttc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:textStyle="bold" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnr_prix5"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:visibility="visible"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_input_prix5_ht"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:hint="Prix 5 (HT)"
                        app:expandedHintEnabled="false"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_prix5_ht"
                            android:gravity="center"
                            android:maxLines="1"
                            android:inputType="numberDecimal"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_input_prix5_ttc"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:hint="Prix 5 (TTC)"
                        app:expandedHintEnabled="false"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_prix5_ttc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:textStyle="bold" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnr_prix6"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:visibility="visible"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_input_prix6_ht"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:hint="Prix 6 (HT)"
                        app:expandedHintEnabled="false"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_prix6_ht"
                            android:gravity="center"
                            android:maxLines="1"
                            android:inputType="numberDecimal"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_input_prix6_ttc"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:hint="Prix 6 (TTC)"
                        app:expandedHintEnabled="false"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_prix6_ttc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:textStyle="bold" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_weight="1"
            android:weightSum="2"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:id="@+id/btn_remise"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/blue"
                android:layout_marginEnd="5sp"
                app:mfb_text="Valider"
                app:mfb_textColor="#FFFFFF" />


            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@color/blue"
                app:mfb_text="Annuler"
                app:mfb_textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>