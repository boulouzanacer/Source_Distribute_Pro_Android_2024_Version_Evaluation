<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sun"
        android:id="@+id/result_scan_space"

        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="PRODUIT : "
            android:textStyle="bold"
            android:id="@+id/textView"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/produit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/produit"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="CODE BARRE :"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:id="@+id/textView7"
            android:layout_below="@+id/produit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="21dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:id="@+id/code_barre"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignRight="@+id/produit"
            android:layout_alignEnd="@+id/produit"
            android:layout_toRightOf="@+id/textView7"
            android:layout_toEndOf="@+id/textView7" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="QUANTITE : "
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:id="@+id/textView6"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/stock_ph"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignRight="@+id/code_barre"
            android:layout_alignEnd="@+id/code_barre"
            android:layout_alignLeft="@+id/code_barre"
            android:layout_alignStart="@+id/code_barre" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="PRIX A : "
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:id="@+id/prix_achat_label"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/prix_a"
            android:layout_alignBottom="@+id/prix_achat_label"
            android:layout_alignRight="@+id/stock_ph"
            android:layout_alignEnd="@+id/stock_ph"
            android:layout_alignLeft="@+id/stock_ph"
            android:layout_alignStart="@+id/stock_ph" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:layout_below="@+id/prix_achat_label"
            android:layout_alignLeft="@+id/prix_achat_label"
            android:layout_alignStart="@+id/prix_achat_label"
            android:id="@+id/relativeLayout2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/message_id"
                android:textSize="20dp"
                android:textColor="@color/red_btn_bg_pressed_color"
                android:text="Vous avez déja invontoré ce produit avec le stock"/>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/emerald"
            android:layout_below="@+id/relativeLayout2"
            android:layout_alignLeft="@+id/relativeLayout2"
            android:layout_alignStart="@+id/relativeLayout2">

            <Button
                android:id="@+id/save_achat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sauvegarder"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                style="@style/dialog_blue_button"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true" />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>