<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Linear_Layout_Header_bon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:weightSum="4"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_select_fournisseur"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="3"
                android:textAllCaps="false"
                android:onClick="onClickEvent"
                android:backgroundTint="@color/violet"
                android:textColor="@color/white"
                android:text="@string/selection_fournisseur"
                android:textSize="12sp"
                app:icon="@drawable/baseline_edit_24"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/btn_mode_tarif"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:onClick="onClickEvent"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:text="Tarif 1"
                android:textSize="12sp"
                tools:ignore="NestedWeights" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="3"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_weight="1"
                android:id="@+id/btn_scan_produit"
                android:background="@drawable/button_bg"
                android:src="@drawable/ic_codebarre_scan"
                android:layout_marginEnd="3dp"
                android:onClick="onClickEvent"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


            <Button
                android:id="@+id/addProduct"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_weight="2"
                android:background="@drawable/button_bg"
                android:onClick="onClickEvent"
                android:text="@string/produit"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:icon="@drawable/add_product"
                tools:ignore="RelativeOverlap,UsingOnClickInXml,TextContrastCheck"
                tools:targetApi="o" />

        </LinearLayout>

    </LinearLayout>






    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/contraint_footer"
        app:layout_constraintTop_toBottomOf="@+id/Linear_Layout_Header_bon">
        <include layout="@layout/layout_list_produit_vente"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contraint_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp">


        <TableLayout
            android:id="@+id/tl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">

            <TableRow
                android:visibility="visible"
                android:id="@+id/tr_total_ht"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/table_row_bg"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    android:paddingEnd="10dp"
                    android:text="@string/total_ht"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/total_ht"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:textStyle="bold"
                    android:text="@string/_0_00_da"
                    tools:ignore="RtlSymmetry" />

            </TableRow>

            <TableRow
                android:visibility="visible"
                android:id="@+id/tr_total_tva"
                android:layout_height="0dp"
                android:background="@drawable/table_row_bg"
                android:layout_width="match_parent"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tva_badge"
                    android:textStyle="bold"
                    android:background="@drawable/table_cell_bg"
                    android:paddingEnd="10dp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0_00_da"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:paddingLeft="10dp"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />

            </TableRow>

            <TableRow
                android:visibility="visible"
                android:id="@+id/tr_total_timbre"
                android:background="@drawable/table_row_bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/timbre"
                    android:textStyle="bold"
                    android:background="@drawable/table_cell_bg"
                    android:paddingEnd="10dp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/txv_timbre_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:onClick="onClickEvent"
                    android:text="@string/modifier"
                    android:textColor="@color/blue"
                    tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck,TextContrastCheck" />


                <TextView
                    android:id="@+id/timbre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0_00_da"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="end"
                    tools:ignore="RtlSymmetry" />

            </TableRow>

            <TableRow
                android:background="@drawable/table_row_last_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_ttc"
                    android:textStyle="bold"
                    android:background="@drawable/table_cell_bg"
                    android:paddingEnd="10dp"
                    tools:ignore="RtlSymmetry" />


                <TextView
                    android:id="@+id/total_ttc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0_00_da"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:paddingLeft="10dp"
                    tools:ignore="RtlHardcoded,RtlSymmetry"  />

            </TableRow>


            <TableRow
                android:background="@drawable/table_row_bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="visible"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    android:paddingEnd="10dp"
                    android:text="@string/remise"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/txv_remise_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:onClick="onClickEvent"
                    android:text="@string/modifier"
                    android:textColor="@color/blue"
                    tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck,TextContrastCheck" />

                <TextView
                    android:id="@+id/txv_remise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0_00_da"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="end"
                    tools:ignore="RtlSymmetry" />

            </TableRow>


            <TableRow
                android:background="@drawable/table_row_last_bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="visible"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ttc_a_payer"
                    android:textStyle="bold"
                    android:background="@drawable/table_cell_bg"
                    android:paddingEnd="10dp"
                    tools:ignore="HardcodedText,RtlSymmetry" />


                <TextView
                    android:id="@+id/total_ttc_remise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0_00_da"
                    android:textStyle="bold"
                    android:paddingStart="15dp"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="end"
                    tools:ignore="RtlSymmetry" />
            </TableRow>

        </TableLayout>


        <LinearLayout
            android:weightSum="3"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/tl">

            <Button
                android:id="@+id/valide_facture"
                style="@style/Widget.Material3.Button.Icon"
                app:icon="@drawable/ic_baseline_check_24"
                android:layout_width="0dp"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:onClick="onClickEvent"
                android:text="@string/valider"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:autoSizeTextType ="uniform"
                tools:targetApi="o"/>

            <Button
                android:id="@+id/btn_mofifier_bon"
                style="@style/Widget.Material3.Button.Icon"
                app:icon="@drawable/baseline_edit_24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:background="@drawable/button_bg"
                android:onClick="onClickEvent"
                android:text="@string/modifier"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:autoSizeTextType ="uniform"
                tools:targetApi="o"/>

            <Button
                android:id="@+id/btn_imp_bon"
                style="@style/Widget.Material3.Button.Icon"
                app:icon="@drawable/ic_baseline_print_24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:onClick="onClickEvent"
                android:text="@string/imprimer"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:autoSizeTextType ="uniform"
                tools:targetApi="o" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
