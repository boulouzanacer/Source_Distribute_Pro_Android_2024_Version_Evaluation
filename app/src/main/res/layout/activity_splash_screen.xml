<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ImageSplash"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:contentDescription="@null"
        android:src="@drawable/splash_pme_pro_distribute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo_revendeur"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_pme_pro_distribute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImageSplash" />

    <LinearLayout
        android:id="@+id/linear_layout_revendeur"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_revendeur">

        <TextView
            android:id="@+id/InfoRevendeur1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="@string/INFO_GLOBAL_TECH1"
            android:textColor="@color/color_pme_pro_distribute"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/InfoRevendeur2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="@string/INFO_GLOBAL_TECH2"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/InfoRevendeur3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"

            android:text="@string/INFO_GLOBAL_TECH3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/InfoRevendeur4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="@string/INFO_GLOBAL_TECH4"
            android:textColor="@color/color_pme_pro_distribute"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/color_pme_pro_distribute"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/color_pme_pro_distribute"
            android:visibility="gone" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>