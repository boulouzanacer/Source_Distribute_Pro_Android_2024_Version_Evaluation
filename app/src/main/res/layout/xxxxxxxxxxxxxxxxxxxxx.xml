<?xml version="1.0" encoding="utf-8"?>
<com.safesoft.proapp.distribute.utils.ToggleButtonGroupTableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/radGroup1">

    <TableRow android:layout_marginTop="5dp">
        <RadioButton
            android:id="@+id/rad0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Libre" />

    </TableRow>

    <TableRow
        android:layout_marginTop="5dp"
        android:weightSum="3">

        <RadioButton
            android:id="@+id/rad1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tarif 1" />

        <RadioButton
            android:id="@+id/rad2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Button4" />

        <RadioButton
            android:id="@+id/rad3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Button4" />

    </TableRow>

    <TableRow
        android:layout_marginTop="5dp"
        android:weightSum="3">

        <RadioButton
            android:id="@+id/rad4"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button4" />

        <RadioButton
            android:id="@+id/rad5"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button5" />

        <RadioButton
            android:id="@+id/rad6"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button6" />
    </TableRow>

</com.safesoft.proapp.distribute.utils.ToggleButtonGroupTableLayout>