<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/font_black"

    android:padding="7dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/btnventes"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:background="@drawable/imagebutton_rounded"
            android:backgroundTint="@color/blue"

            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@mipmap/vente" />

        <ImageButton
            android:id="@+id/btn_b_reception"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/imagebutton_rounded"

            android:backgroundTint="@color/jaune"
            android:onClick="onClick"
            android:src="@mipmap/transfert" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <ImageButton
            android:id="@+id/btnproduits"
            android:layout_width="0dip"
            android:onClick="onClick"
            android:layout_marginEnd="5dp"
            android:background="@drawable/imagebutton_rounded"
            android:backgroundTint="@color/rouge"
            android:layout_height="match_parent"
            android:src="@mipmap/produit"
            android:layout_weight="1" />


        <ImageButton
            android:id="@+id/btnclients"
            android:layout_width="0dip"
            android:onClick="onClick"
            android:layout_marginStart="5dp"
            android:background="@drawable/imagebutton_rounded"
            android:backgroundTint="@color/vert_clair"
            android:layout_height="match_parent"
            android:src="@mipmap/client"
            android:layout_weight="1"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <ImageButton
            android:id="@+id/btnimport_export"
            android:layout_width="0dip"
            android:onClick="onClick"
            android:layout_marginRight="5dp"
            android:background="@drawable/imagebutton_rounded"

            android:backgroundTint="@color/violet"
            android:src="@mipmap/import_export"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btncommande"
            android:layout_width="0dip"
            android:onClick="onClick"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/commande"
            android:background="@drawable/imagebutton_rounded"

            android:backgroundTint="@color/sandy_brown"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <ImageButton
            android:id="@+id/btn_inventaire_achat"
            android:layout_width="0dip"
            android:onClick="onClick"
            android:layout_marginRight="5dp"
            android:background="@drawable/imagebutton_rounded"

            android:backgroundTint="@color/gray"
            android:src="@mipmap/inventaire"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnparametres"
            android:layout_width="0dip"
            android:onClick="onClick"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/parametre"
            android:background="@drawable/imagebutton_rounded"

            android:backgroundTint="@color/colorAccent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>