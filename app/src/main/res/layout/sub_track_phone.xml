<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:padding="10dp"
    android:id="@+id/sub_track_phone"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView"
        android:text="GPS Sender - Admin maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:weightSum="4"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Terminal ID : "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"/>

        <TextView
            android:id="@+id/device_id"
            android:text="0000000000000"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="start"/>

    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contextClickable="false"
        app:errorMessage="@string/error_message_empty"
        app:errorType="empty"
        app:hintTextColor="@color/blue"
        android:layout_margin="5dp"
        app:expandedHintEnabled="false"
        app:layout_constraintTop_toBottomOf="@+id/device_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:helperText="   "
        android:hint="nom de telephone">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_device_name"
            android:gravity="center"
            android:inputType="text"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contextClickable="false"
        app:errorMessage="@string/error_message_empty"
        app:errorType="empty"
        app:hintTextColor="@color/blue"
        android:layout_margin="5dp"
        app:expandedHintEnabled="false"
        app:helperText="   "
        android:hint="email"
        app:layout_constraintTop_toBottomOf="@+id/edt_device_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_email"
            android:gravity="center"
            android:inputType="text"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contextClickable="false"
        app:errorMessage="@string/error_message_empty"
        app:errorType="empty"
        app:hintTextColor="@color/blue"
        android:layout_margin="5dp"
        app:expandedHintEnabled="false"
        app:helperText="   "
        android:hint="password"
        app:layout_constraintTop_toBottomOf="@+id/edt_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_password"
            android:gravity="center"
            android:inputType="text"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="2">

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <!-- Icône de statut au milieu -->
            <ImageView
                android:id="@+id/status_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_status_warning"
                android:contentDescription="Statut de connexion"
                android:adjustViewBounds="true" />
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/start_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="Connecter" />

            <Button
                android:id="@+id/stop_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="Déconnecter" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Envoi de position -->
        <TextView
            android:id="@+id/location_status_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Envoi position message"
            android:textAlignment="center"
            android:textStyle="italic"
            android:textColor="@color/black" />

        <!-- Envoi de position -->
        <TextView
            android:id="@+id/location_status_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="@color/black" />

    </LinearLayout>


</LinearLayout>
