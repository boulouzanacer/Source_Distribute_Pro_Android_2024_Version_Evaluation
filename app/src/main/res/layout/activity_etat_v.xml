<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tite_session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/emerald"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user"
            android:textSize="18sp"
            android:padding="3dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="Tous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtv_wilaya"
                android:textSize="16sp"
                android:padding="3dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="wilaya:"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtv_commune"
                android:textSize="16sp"
                android:padding="3dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:text="commune:"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/debut"
                android:textSize="16sp"
                android:padding="3dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="de 10/10/2012 10:30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fin"
                android:textSize="16sp"
                android:padding="3dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="vers 05/02/2015 10:30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_error"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageError"
            android:src="@mipmap/error"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="82dp" />

        <ImageView
            android:id="@+id/retry"
            android:src="@mipmap/ref"
            android:clickable="true"
            android:background="@drawable/selector_image_retry"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/textError"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/textError"
            android:text="Probleme fatal, Ressayer"

            android:layout_below="@id/imageError"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lempty_data"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:padding="15dp"
        android:layout_height="match_parent">

        <TextView
            android:gravity="center"
            android:padding="15dp"
            android:textSize="22dp"
            android:text="Cette rubrique vous pemet de consulter le dtail des ventes entre deux dates donnÃ©es, et par clients "
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <com.victor.loading.book.BookLoading
        android:id="@+id/bookloading"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp">

        <TextView
            android:text="Patiantez SVP ..."
            android:textSize="10sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />
    </com.victor.loading.book.BookLoading>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:visibility="gone"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
