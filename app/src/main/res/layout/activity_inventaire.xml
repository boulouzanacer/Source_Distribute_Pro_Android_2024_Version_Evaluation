<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:weightSum="10"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/myToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:navigationIcon="@drawable/ic_arrow_back_24"
        tools:titleEnabled="false" />

    <LinearLayout
        android:id="@+id/Linear_Layout_Header_bon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/myToolbar"
        tools:ignore="MissingConstraints">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="8"
                android:contextClickable="false"
                android:hint="Nom inventaire"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                app:expandedHintEnabled="false"
                app:helperText="   ">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_nom_inventaire"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:inputType="none"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


            </com.google.android.material.textfield.TextInputLayout>


            <ImageButton
                android:id="@+id/btn_valide_inv_name"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:background="@drawable/ic_baseline_done_24"
                android:backgroundTint="@color/blue"
                android:onClick="onClickEvent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="3"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_scan_produit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:onClick="onClickEvent"
                android:src="@drawable/ic_codebarre_scan" />


            <Button
                android:id="@+id/addProduct"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="3dp"
                android:layout_weight="2"
                android:background="@drawable/button_bg"
                android:onClick="onClickEvent"
                android:text="@string/produit"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:icon="@drawable/add_product"
                tools:ignore="RelativeOverlap,UsingOnClickInXml,TextContrastCheck"
                tools:targetApi="o" />

        </LinearLayout>

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/contraint_footer"
        app:layout_constraintTop_toBottomOf="@+id/Linear_Layout_Header_bon">

        <include layout="@layout/layout_list_produit_inventaire" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contraint_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp">


        <TableLayout
            android:id="@+id/tl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">

            <TableRow
                android:background="@drawable/table_row_last_bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="visible"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre de produit"
                    android:textStyle="bold"
                    android:background="@drawable/table_cell_bg"
                    android:paddingEnd="10dp"
                    tools:ignore="HardcodedText,RtlSymmetry" />


                <TextView
                    android:id="@+id/total_nbr_produit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:paddingStart="15dp"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="end"
                    tools:ignore="RtlSymmetry" />
            </TableRow>

        </TableLayout>


        <LinearLayout
            android:weightSum="3"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/tl">

            <Button
                android:id="@+id/valide_inventaire"
                style="@style/Widget.Material3.Button.Icon"
                app:icon="@drawable/ic_baseline_check_24"
                android:layout_width="0dp"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:onClick="onClickEvent"
                android:text="@string/valider"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                tools:targetApi="o" />

            <Button
                android:id="@+id/btn_mofifier_bon"
                style="@style/Widget.Material3.Button.Icon"
                app:icon="@drawable/baseline_edit_24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:background="@drawable/button_bg"
                android:onClick="onClickEvent"
                android:text="@string/modifier"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                tools:targetApi="o" />

            <Button
                android:id="@+id/btn_imp_bon"
                style="@style/Widget.Material3.Button.Icon"
                app:icon="@drawable/ic_baseline_print_24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:onClick="onClickEvent"
                android:text="@string/imprimer"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                tools:targetApi="o" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
