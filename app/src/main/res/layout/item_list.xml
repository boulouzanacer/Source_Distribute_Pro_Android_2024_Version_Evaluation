<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_root_produit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_height="100dp"
        android:background="@drawable/client_selector"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginEnd="3dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_product"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_camera_24" />
        </LinearLayout>


        <LinearLayout
            android:layout_weight="2.8"
            android:layout_width="0dp"
            android:weightSum="6"
            android:layout_marginEnd="3dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="3.5"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                tools:ignore="NestedWeights">

                <TextView
                    android:id="@+id/produit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:padding="3dp"
                    android:maxLines="2"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:textSize="18sp"
                    android:text="Produit"
                    android:gravity="center|start"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="2.5"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/layout_colissage"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:visibility="visible">
                    <TextView
                        android:id="@+id/colissage_title"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/colis"
                        android:textAlignment="center"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights,SmallSp" />

                    <TextView
                        android:id="@+id/colissage"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textSize="18sp"
                        android:text="12"
                        android:layout_weight="2"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:weightSum="3"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/colis_title"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/Stock_colis"
                        android:textAlignment="center"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights,SmallSp" />

                    <TextView
                        android:id="@+id/stock_colis"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textSize="18sp"
                        android:text="120"
                        android:textColor="@color/lightcoral"
                        android:layout_weight="2"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:weightSum="3"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/vrac_title"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:text="@string/Stock_vrac"
                        android:textAlignment="center"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights,SmallSp" />

                    <TextView
                        android:id="@+id/vrac"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textSize="18sp"
                        android:text="3"
                        android:textColor="@color/lightcoral"
                        android:layout_weight="2"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.2"
            android:weightSum="6"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="3.5"
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_height="0dp"
                tools:ignore="NestedWeights">

                <TextView
                    android:id="@+id/pu_title"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="0dp"
                    android:text="@string/p_u"
                    android:textAlignment="center"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/pu"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@mipmap/ic_launcher"
                    android:textSize="16sp"
                    android:text="1233"
                    android:textColor="@color/emerald"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:weightSum="3"
                android:id="@+id/layout_stock_colis"
                android:visibility="visible"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/stock_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:text="@string/Stock_unite"
                    android:textAlignment="center"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights,SmallSp" />

                <TextView
                    android:id="@+id/qte_r"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="18sp"
                    android:text="3"
                    android:textColor="@color/color_pme_pro_distribute"

                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>