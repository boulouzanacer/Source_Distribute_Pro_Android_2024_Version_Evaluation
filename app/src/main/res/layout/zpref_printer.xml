<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/param_impr"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:layout_marginBottom="20dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:alpha="0.5"
        android:text="@string/s_l_ctionnez_l_imprimente_qui_vous_permetra_d_imprimer_les_tickets" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_large_size"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_background_holo_light"
        android:clickable="true"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:paddingStart="8dip"
        android:focusable="true"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="horizontal"
            android:textColor="@color/black"
            android:text="@string/s_l_ctionner_imprimente"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.safesoft.proapp.distribute.view.FlowRadioGroup
            android:id="@+id/rg_connect"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_connect_bluetooth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Bluetooth" />

            <RadioButton
                android:id="@+id/rb_connect_wifi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:text="WiFi" />

            <RadioButton
                android:id="@+id/rb_connect_usb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="USB"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/rb_connect_com"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="COM"
                android:visibility="visible" />

        </com.safesoft.proapp.distribute.view.FlowRadioGroup>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="horizontal"
            android:textColor="@color/black"
            android:text="@string/model_imprimente"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <com.safesoft.proapp.distribute.view.FlowRadioGroup
            android:id="@+id/rg_type_imprimente"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_type_ticket"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Impriment ticket " />

            <RadioButton
                android:id="@+id/rb_type_codebarre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Impriment codebarre " />

        </com.safesoft.proapp.distribute.view.FlowRadioGroup>


        <TextView
            android:id="@+id/langue_ticket_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="horizontal"
            android:textColor="@color/black"
            android:text="Langue ticket"
            android:visibility="visible"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <com.safesoft.proapp.distribute.view.FlowRadioGroup
            android:id="@+id/rg_langue_ticket"
            android:weightSum="2"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_langue_latin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Ticket latin " />

            <RadioButton
                android:id="@+id/rb_langue_arabe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Ticket arabe" />

        </com.safesoft.proapp.distribute.view.FlowRadioGroup>

        <TextView
            android:id="@+id/model_ticket_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="horizontal"
            android:textColor="@color/black"
            android:text="@string/model_ticket"
            android:visibility="visible"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <com.safesoft.proapp.distribute.view.FlowRadioGroup
            android:id="@+id/rg_model_latin_ticket"
            android:weightSum="2"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_model_latin_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Model latin 1" />

            <RadioButton
                android:id="@+id/rb_model_latin_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Model latin 2" />

        </com.safesoft.proapp.distribute.view.FlowRadioGroup>


        <com.safesoft.proapp.distribute.view.FlowRadioGroup
            android:id="@+id/rg_model_ticket_codebarre"
            android:weightSum="2"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rg_model_ticket_codebarre_50X30"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Model 50 X 30" />

            <RadioButton
                android:id="@+id/rg_model_ticket_codebarre_40X20"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Model 40 X 20" />

        </com.safesoft.proapp.distribute.view.FlowRadioGroup>

        <com.safesoft.proapp.distribute.view.FlowRadioGroup
            android:id="@+id/rg_model_arabe_ticket"
            android:weightSum="2"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_model_arabe_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Model arabe 1" />

            <RadioButton
                android:id="@+id/rb_model_arabe_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Model arabe 2" />

        </com.safesoft.proapp.distribute.view.FlowRadioGroup>

        <Button
            android:id="@+id/btn_connected_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:text="Choisissez un périphérique à connecté" />

        <TextView
            android:id="@+id/tv_device_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            android:gravity="center"
            android:padding="10dp"
            android:tag="-1"
            android:textSize="18sp" />


        <ProgressBar
            android:id="@+id/pb_connect"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_disConnect_printer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:enabled="false"
                android:textAllCaps="false"
                android:text="Déconnecter" />

            <Button
                android:id="@+id/btn_connect_printer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Connecter" />

        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_test"
                android:layout_weight="1"
                android:text="Tester impression"
                android:enabled="false"
                android:textAllCaps="false" />

        </TableRow>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/divider" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_background_holo_light"
        android:orientation="vertical"
        android:clickable="true"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:focusable="true"
        tools:ignore="RtlSymmetry">

        <TextView
            android:text="@string/affichez_l_entete_de_soci_t_sur_le_bon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fadingEdge="horizontal"
            android:padding="5dp"
            android:visibility="visible"
            android:textAppearance="?android:attr/textAppearanceMedium">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/comapny_logo"
                    android:layout_gravity="center"
                    android:src="@mipmap/user_profile"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />


                <Button
                    android:id="@+id/btn_clear_logo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:text="Effacer logo" />
            </LinearLayout>




            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:hint="Nom d'entreprise"
                app:expandedHintEnabled="false"
                app:helperText="  ">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_company_name"
                    android:gravity="center"
                    android:inputType="text"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:hint="L'activité"
                app:expandedHintEnabled="false"
                app:helperText="  ">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_activity_name"
                    android:gravity="center"
                    android:inputType="text"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:hint="L'adresse de l'entreprise'"
                app:expandedHintEnabled="false"
                app:helperText="  ">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_company_adresse"
                    android:gravity="center"
                    android:inputType="text"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:hint="Téléphone d'entreprise'"
                app:expandedHintEnabled="false"
                app:helperText="  ">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_company_tel"
                    android:gravity="center"
                    android:inputType="text"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_background_holo_light"
        android:orientation="vertical"
        android:clickable="true"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:paddingStart="8dip"
        android:focusable="true"
        tools:ignore="RtlSymmetry">

        <TextView
            android:text="@string/affichez_le_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fadingEdge="horizontal"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:hint="Pied de page"
                app:expandedHintEnabled="false"
                app:helperText="  ">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_pied_de_page"
                    android:gravity="center"
                    android:inputType="text"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>