<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/param_impr"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:layout_marginBottom="20dp"
    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:alpha="0.5"
        android:text="@string/s_l_ctionnez_l_imprimente_qui_vous_permetra_d_imprimer_les_tickets" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_large_size"
        android:background="@color/divider" />

    <LinearLayout
        android:id="@+id/prefSpacingPrin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_background_holo_light"
        android:clickable="true"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:paddingStart="8dip"
        android:focusable="true"
        tools:ignore="RtlSymmetry">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fadingEdge="horizontal"
            android:textColor="@color/black"
            android:text="@string/s_l_ctionner_imprimente"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textAlignment="center"
            android:fadingEdge="horizontal"
            android:layout_marginLeft="40dp"
            android:text="@string/camera"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="RtlCompat,RtlHardcoded">


            <RadioButton
                android:text="@string/int_grer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/radioButton_integrer" />

            <RadioButton
                android:text="@string/bluetooth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/radioButton_bluetooth" />
            </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size"
        android:background="@color/divider" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_large_size"
        android:background="@color/divider" />

    <LinearLayout
        android:id="@+id/prefSpacingPrin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_background_holo_light"
        android:orientation="vertical"
        android:clickable="true"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:paddingStart="8dip"
        android:focusable="true"
        tools:ignore="RtlSymmetry">

        <CheckBox
            android:text="@string/affichez_l_entete_de_soci_t_sur_le_bon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/title_bon" />

        <LinearLayout
            android:id="@+id/edit_bloc"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fadingEdge="horizontal"
            android:layout_marginStart="20dp"
            android:padding="5dp"
            android:visibility="visible"
            android:textAppearance="?android:attr/textAppearanceMedium">

            <EditText
                android:id="@+id/company_name"
                android:hint="@string/nom_d_entreprise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="Autofill"
                android:inputType="text" />

            <EditText
                android:id="@+id/activity_name"
                android:hint="@string/activit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="Autofill"
                android:inputType="text" />
            <EditText
                android:id="@+id/adresse"
                android:hint="@string/adresse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="Autofill"
                android:inputType="text" />

            <Button
                android:id="@+id/enregistrer"
                android:text="@string/enregistrer"
                android:layout_gravity="end"
                android:padding="10dp"
                android:drawableStart="@mipmap/save_title_company"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg"
                android:layout_marginEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_background_holo_light"
        android:orientation="vertical"
        android:clickable="true"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:paddingStart="8dip"
        android:focusable="true"
        tools:ignore="RtlSymmetry">

        <CheckBox
            android:text="@string/affichez_le_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/title_footer" />

        <LinearLayout
            android:id="@+id/edit_footer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fadingEdge="horizontal"
            android:layout_marginStart="20dp"
            android:padding="5dp"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceMedium">

            <EditText
                android:id="@+id/merci"
                android:hint="@string/merci"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="Autofill"
                android:inputType="text" />

            <EditText
                android:id="@+id/encas"
                android:hint="@string/en_cas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="Autofill"
                android:inputType="text" />


            <Button
                android:id="@+id/enregistrer_footer"
                android:text="@string/enregistrer"
                android:layout_gravity="end"
                android:padding="10dp"
                android:drawableStart="@mipmap/save_title_company"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg"
                android:layout_marginEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>