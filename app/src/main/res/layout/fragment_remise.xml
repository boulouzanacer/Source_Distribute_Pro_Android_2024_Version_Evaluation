<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:weightSum="5"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_weight="1"
            android:id="@+id/title_remise"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/blue"
            android:text="@string/remise_montant"
            android:gravity="center"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:typeface="monospace" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/montant_avant_remiseLayout"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:contextClickable="false"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:hint="@string/montant_avant_remise"
                android:layout_margin="5dp"
                app:expandedHintEnabled="false"
                app:helperText="@string/montant_avant_remise">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/montant_avant_remise"
                    android:gravity="center"
                    android:inputType="none"
                    android:enabled="false"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="4"
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:id="@+id/montant_remiseLayout"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contextClickable="false"
                android:layout_weight="2.5"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                app:hintTextColor="@color/blue"
                android:layout_margin="5dp"
                app:expandedHintEnabled="false"
                app:helperText="@string/montant_remise"
                android:hint="@string/montant_remise">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/montant_remise"
                    android:gravity="center"
                    android:inputType="numberSigned|numberDecimal"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:id="@+id/taux_remiseLayout"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contextClickable="false"
                android:layout_weight="1.5"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                app:hintTextColor="@color/blue"
                android:layout_margin="5dp"
                app:expandedHintEnabled="false"
                app:helperText="@string/taux_remise"
                android:hint="@string/taux_remise">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/taux_remise"
                    android:gravity="center"
                    android:inputType="numberSigned|numberDecimal"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:id="@+id/montant_apres_remiseLayout"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contextClickable="false"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                app:hintTextColor="@color/blue"
                android:layout_margin="5dp"
                app:expandedHintEnabled="false"
                app:helperText="@string/montant_apres_remise"
                android:hint="@string/montant_apres_remise">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/montant_apres_remise"
                    android:gravity="center"
                    android:inputType="none"
                    android:enabled="false"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="2"
            android:padding="10dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="0dp">

            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:id="@+id/btn_remise"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/blue"
                android:layout_marginEnd="5sp"
                app:mfb_text="Valider"
                app:mfb_textColor="#FFFFFF" />


            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@color/blue"
                app:mfb_text="Annuler"
                app:mfb_textColor="#FFFFFF" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>