<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Buy/Sell Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="#E5F5E3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Buy"
            android:textColor="#00A75E"
            android:textStyle="bold"
            android:padding="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Sell"
            android:textColor="#A0A0A0"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Dropdown for Market -->
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#F5F5F5"
        android:padding="12dp"
        android:spinnerMode="dropdown" />

    <!-- Market Price Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#F5F5F5"
        android:padding="12dp"
        android:text="Market Price"
        android:textColor="#000000" />

    <!-- Total Input -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#F5F5F5"
        android:padding="12dp"
        android:hint="Total"
        android:inputType="numberDecimal" />

    <!-- Available, Max Buy, and Fee -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avbl: 0.0035348 USDT"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Max Buy: 0 UTK"
            android:textColor="#A0A0A0"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Est. Fee: -- UTK"
            android:textColor="#A0A0A0"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Buy Button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#00A75E"
        android:text="Buy UTK"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:padding="12dp" />

</LinearLayout>
