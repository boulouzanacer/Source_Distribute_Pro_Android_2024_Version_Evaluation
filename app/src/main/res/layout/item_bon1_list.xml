<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_root"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/client_selector"
            tools:ignore="RtlSymmetry">


            <com.haozhang.lib.SlantedTextView
                android:id="@+id/blocage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:text="@string/valider"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/vert"
                android:textSize="21sp"
                app:slantedBackgroundColor="@color/white"
                app:slantedLength="40dp"
                app:slantedMode="right_bottom"
                app:slantedText="IOS"
                app:slantedTextColor="@color/white"
                app:slantedTextSize="16sp" />

            <TextView
                android:id="@+id/nbr_p"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_above="@+id/blocage"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="@string/nbre_produit"
                android:textSize="20dp"
                android:gravity="center|center_horizontal"
                android:orientation="vertical"></TextView>


            <LinearLayout
                android:id="@+id/left_side_ly"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/blocage"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/num_bon"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/_000001"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights" />

                    <TextView
                        android:id="@+id/date_bon"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/_01_01_2022"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/vert_clair"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/heure_bon"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/red_btn_bg_pressed_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/diff_time"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:weightSum="3"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/nom_client"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/nom_client"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black_overlay"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <LinearLayout
                            android:weightSum="3"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:text="@string/montant_bon"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:textSize="10sp"
                                tools:ignore="NestedWeights,SmallSp" />

                            <TextView
                                android:layout_weight="2"
                                android:id="@+id/montant"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:text="@string/_18_000_da"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnr_versement"
                            android:weightSum="3"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:visibility="visible"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:text="@string/versement"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:textSize="10sp"
                                tools:ignore="NestedWeights,SmallSp" />

                            <TextView
                                android:layout_weight="2"
                                android:id="@+id/versement_bon"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:text="@string/_18_000_da"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/txt_benifice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/left_side_ly"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/left_side_ly"
                android:text="0"
                android:textStyle="bold"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:gravity="center|center_horizontal"></TextView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</merge>



