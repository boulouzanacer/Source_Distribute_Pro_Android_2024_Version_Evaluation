<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/QR_CODE_IM"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/LAB_SERIAL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        android:text="@string/LAB_SERIAL"
        android:textAllCaps="false"
        android:textColor="#A84B3A"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QR_CODE_IM" />
    <TextView
        android:id="@+id/NUM_SERIAL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        android:text="@string/NUM_SERIAL"
        android:textAllCaps="false"
        android:textColor="#A84B3A"
        android:textIsSelectable="true"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LAB_SERIAL" />

    <EditText
        android:id="@+id/CODE_ACTIVATION"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:autofillHints="Code activation"
        android:gravity="center_horizontal"
        android:hint="@string/CODE_ACTIVATION"
        android:inputType="number"
        android:textColor="#45A83A"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/BTN_ACTIVATION"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NUM_SERIAL"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/BTN_ACTIVATION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        android:hapticFeedbackEnabled="false"
        android:onClick="onClick_Btn_Activation"
        android:text="@string/BTN_ACTIVATION"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/CODE_ACTIVATION"
        app:layout_constraintTop_toBottomOf="@+id/NUM_SERIAL"
        tools:ignore="UsingOnClickInXml" />

    <Button
        android:id="@+id/BTN_START"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        android:onClick="onClick_Btn_Start"
        android:text="@string/BTN_START"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CODE_ACTIVATION"
        tools:ignore="UsingOnClickInXml" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BTN_START">

        <TextView
            android:id="@+id/InfoRevendeur1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="@string/INFO_SAFE_SOFT1"
            android:textColor="@color/color_pme_pro_distribute"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/InfoRevendeur2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="@string/INFO_CHERRATA_SOFT2"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/InfoRevendeur3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"

            android:text="@string/INFO_CHERRATA_SOFT3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/InfoRevendeur4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="@string/INFO_CHERRATA_SOFT4"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.safesoft.proapp.distribute.activation.ActivityActivation"
        android:visibility="gone" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/distribution_activation"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_weight="1.05">

            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/code_client_check_edittext"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:hint="@string/code_client_hint"
                android:inputType="number"
                android:layout_gravity="right"
                app:errorMessage="@string/error_message_code_client"
                app:errorType="value"
                app:maxChars="6"
                app:minChars="1" />


            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/nom_client_check_edittext"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/code_client_check_edittext"
                android:layout_marginTop="5dp"
                android:hint="@string/nom_client_hint"
                android:layout_gravity="right"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty" />


            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/phone_client_check_edittext"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/nom_client_check_edittext"
                android:layout_alignStart="@+id/nom_client_check_edittext"
                android:layout_below="@+id/nom_client_check_edittext"
                android:layout_marginTop="5dp"
                android:hint="@string/phone_client_hint"
                android:inputType="number"
                android:layout_gravity="right"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty" />


            <com.emmasuzuki.easyform.EasyTextInputLayout
                android:id="@+id/revendeur_check_edittext"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/phone_client_check_edittext"
                android:layout_marginTop="5dp"
                android:hint="@string/revendeur_hint"
                android:visibility="gone"
                android:layout_gravity="right"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">

            <ImageButton
                android:id="@+id/activer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="5dp"
                android:background="@color/float_transparent"
                android:onClick="onClickButton"
                android:src="@mipmap/activate_icon" />


        </RelativeLayout>
    </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>