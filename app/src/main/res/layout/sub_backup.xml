<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:id="@+id/param_backup"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a_vous_permet_de_faire_une_sauvegarde_des_donn_es_une_copie_du_base_de_donn_es_sur_un_serveur_distant_et_meme_la_restauration_de_vos_donn_es"
        android:textSize="12sp"
        android:textColor="@color/gray" />



    <LinearLayout
        android:id="@+id/backup_confique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_background_holo_light"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:onClick="onClickListener"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        tools:ignore="RtlSymmetry,UsingOnClickInXml">

        <LinearLayout
            android:weightSum="10"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:textColor="@color/black"
                android:singleLine="true"
                android:text="Email :"
                android:clickable="false"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txtv_email_cloud"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:textColor="@color/black"
                android:singleLine="true"
                android:text="boulouza.nacer@gmail.com"
                android:clickable="false"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <LinearLayout
            android:weightSum="10"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:textColor="@color/black"
                android:singleLine="true"
                android:text="Password :"
                android:clickable="false"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txtv_password_cloud"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:textColor="@color/black"
                android:singleLine="true"
                android:text="12345678"
                android:clickable="false"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:weightSum="3"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_deconecte_cloud"
            style="@style/dialog_blue_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:text="Déconnexion" />


        <Button
            android:id="@+id/btn_login_cloud"
            style="@style/dialog_blue_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="5dp"
            android:text="Connexion" />

        <Button
            android:id="@+id/btn_signup_cloud"
            style="@style/dialog_blue_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="5dp"
            android:text="Inscription" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/backup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_background_holo_light"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClickListener"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:paddingStart="8dip"
        tools:ignore="RtlSymmetry,UsingOnClickInXml">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:textColor="@color/black"
            android:singleLine="true"
            android:text="@string/sauvegarder_backup"
            android:clickable="false"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/restore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_background_holo_light"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClickListener"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:paddingStart="8dip"
        tools:ignore="RtlSymmetry,UsingOnClickInXml">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:textColor="@color/black"
            android:singleLine="true"
            android:text="@string/restorer_backup"
            android:clickable="false"
            android:textAppearance="?android:attr/textAppearanceMedium" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_large_size"
        android:background="@color/divider" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ça vous permet d'afficher / masquer le button mise à jour dans le menu principale pour pouvoir mettre à jour l'application"
        android:textSize="12sp"
        android:textColor="@color/gray" />
</LinearLayout>