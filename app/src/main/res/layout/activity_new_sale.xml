<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contraint_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toTopOf="parent"
        android:orientation="vertical"
        android:background="@color/gray"
        tools:layout_editor_absoluteX="0dp">


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:onClick="onClickEvent"
            android:background="@drawable/produit_item_border"
            tools:ignore="MissingConstraints">


            <TextView
                android:id="@+id/descrip_import"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/btn_create"
                android:gravity="center"
                android:text="@string/str_select_client"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descrip_import"
                android:layout_alignBottom="@+id/btn_create"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/btn_create"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="12sp" />


            <Button
                android:id="@+id/btn_create"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/button_bg"
                android:onClick="onClickEvent"
                android:text="@string/cr_er"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="UsingOnClickInXml" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/produit_item_border"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

            <TextView
                android:id="@+id/observation_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/btn_obs"
                android:text="@string/observation"
                android:textAlignment="center"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/observation_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/observation_title"
                android:layout_alignBottom="@+id/btn_obs"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/btn_obs"
                android:gravity="center"
                android:maxLines="3"
                android:text="@string/str_modifier_obs"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_obs"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/button_bg"
                android:onClick="onClickEvent"
                android:text="@string/str_add_obs"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap,UsingOnClickInXml" />

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/produit_item_border"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/mode_tarif"
                style="@style/TitleBadgeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mode_tarif_text"
                android:layout_alignBottom="@+id/addProduct"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/addProduct"
                android:text="xxxxxxxxxx"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mode_tarif_text"
                style="@style/TitleBadgeTitle"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/addProduct"
                android:text="@string/mode_tarif_text"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Button
                android:id="@+id/addProduct"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/button_bg"
                android:onClick="onClickEvent"
                android:text="@string/produit"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap,UsingOnClickInXml" />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/contraint_footer"
        app:layout_constraintTop_toBottomOf="@+id/contraint_header">


        <include layout="@layout/layout_list_produit_vente"/>

    </androidx.constraintlayout.widget.ConstraintLayout>






    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contraint_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"

        tools:layout_editor_absoluteX="0dp">


        <TableLayout
            android:id="@+id/tl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:padding="2dp">

            <TableRow
                android:id="@+id/tr_header"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/table_row_bg"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    android:paddingEnd="10dp"
                    android:text="@string/total_ht"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/total_ht"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:textStyle="bold"
                    android:text="@string/_0_00_da"
                    tools:ignore="RtlSymmetry" />

            </TableRow>

            <TableRow
                android:id="@+id/tr_item_1"
                android:layout_height="0dp"
                android:background="@drawable/table_row_bg"
                android:layout_width="match_parent"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_product_item_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tva_badje"
                    android:textStyle="bold"
                    android:background="@drawable/table_cell_bg"
                    android:paddingEnd="10dp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0_00_da"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:paddingLeft="10dp"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />

            </TableRow>

            <TableRow
                android:id="@+id/tr_item_5"
                android:background="@drawable/table_row_bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="visible"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_product_item_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/timbre"
                    android:textStyle="bold"
                    android:background="@drawable/table_cell_bg"
                    android:paddingEnd="10dp"
                    tools:ignore="RtlSymmetry" />

                <CheckBox
                    android:id="@+id/checkbox_timbre"
                    android:layout_width="10dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/timbre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0_00_da"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="end"
                    tools:ignore="RtlSymmetry" />

            </TableRow>

            <TableRow
                android:id="@+id/tr_item_2"
                android:background="@drawable/table_row_last_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_product_item_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_ttc"
                    android:textStyle="bold"
                    android:background="@drawable/table_cell_bg"
                    android:paddingEnd="10dp"
                    tools:ignore="RtlSymmetry" />


                <TextView
                    android:id="@+id/total_ttc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0_00_da"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:paddingLeft="10dp"
                    tools:ignore="RtlHardcoded,RtlSymmetry"  />

            </TableRow>


            <TableRow
                android:id="@+id/tr_item_3"
                android:background="@drawable/table_row_bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="visible"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_product_item_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    android:paddingEnd="10dp"
                    android:text="@string/remise"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/txv_remise_btn"
                    android:layout_width="20dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/blue"
                    android:text="@string/modifier"
                    android:onClick="onClickEvent"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/txv_remise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0_00_da"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="end"
                    tools:ignore="RtlSymmetry" />

            </TableRow>


            <TableRow
                android:id="@+id/tr_item_4"
                android:background="@drawable/table_row_last_bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="visible"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_product_item_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ttc_a_payer"
                    android:textStyle="bold"
                    android:background="@drawable/table_cell_bg"
                    android:paddingEnd="10dp"
                    tools:ignore="HardcodedText,RtlSymmetry" />


                <TextView
                    android:id="@+id/total_ttc_remise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0_00_da"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="end"
                    tools:ignore="RtlSymmetry" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/valide_facture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button_validate"
            android:onClick="onClickEvent"
            android:text="@string/valider"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tl" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
