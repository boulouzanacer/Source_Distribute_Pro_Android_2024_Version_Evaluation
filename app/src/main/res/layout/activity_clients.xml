<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/font_black"
    android:weightSum="20"
    android:orientation="vertical"
    tools:context="com.safesoft.proapp.distribute.activities.client.ActivityClients">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/myToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleEnabled="false"
        app:navigationIcon="@drawable/ic_arrow_back_24" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_client"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="19"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/list_client_nbr_client"
        android:layout_weight="1"
        android:text="Nombre de client : "
        android:gravity="center"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

</LinearLayout>
