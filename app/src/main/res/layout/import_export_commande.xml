<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlt_export_commandes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="visible"
        android:onClick="onRelativeClick"
        android:background="@drawable/import_export_selector"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/exportt_commande"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Exportation commandes (Réseaux IP)"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black_overlay"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ça vous permet d'exporter les bons de commandes vers le serveur distant"
            android:layout_below="@+id/exportt_commande"
            android:textSize="12sp"
            android:clickable="false"
            android:textColor="@color/gray"
            android:layout_alignParentStart="true" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rlt_export_commandes_ftp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="visible"
        android:onClick="onRelativeClick"
        android:background="@drawable/import_export_selector"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/exportt_commande_ftp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Exportation commandes (Serveur FTP)"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black_overlay"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vous permet d'exporter les bons de commandes et les versements clients vers le serveur FTP"
            android:layout_below="@+id/exportt_commande_ftp"
            android:textSize="12sp"
            android:clickable="false"
            android:textColor="@color/gray"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlt_exported_commandes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="visible"
        android:onClick="onRelativeClick"
        android:background="@drawable/import_export_selector"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">


        <TextView
            android:id="@+id/exportted_commande"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Bons de commandes exportés"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black_overlay"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exportted_commande"
            android:layout_alignParentStart="true"
            android:clickable="false"
            android:text="ça vous permet d'afficher les bons de commandes déja exportés avec la possibilité de suppression"
            android:textColor="@color/gray"
            android:textSize="12sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlt_etatc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="gone"
        android:onClick="onRelativeClick"
        android:background="@drawable/import_export_selector"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/etat_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Etat de commande"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black_overlay"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etat_c"
            android:layout_alignParentStart="true"
            android:clickable="false"
            android:text="ça vous permet de consulter la quantité des produits commandés entre deux date données ansi que le montant total, remise total, ...."
            android:textColor="@color/gray"
            android:textSize="12sp" />

    </RelativeLayout>


</LinearLayout>