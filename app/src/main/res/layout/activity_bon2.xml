<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="com.safesoft.pro.distribute.activities.vente.ActivityBon2">

    <RelativeLayout
        android:id="@+id/entete_produit"
        android:padding="5dp"
        android:background="@color/contentDividerLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview1"
            android:text="Produit"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textview2"
            android:text="Quantite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="61dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/textview3" />


        <TextView
            android:id="@+id/textview3"
            android:text="P.U"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <View
        android:background="@color/vert"
        android:layout_below="@+id/entete_produit"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/view" />

    <ListView
        android:id="@+id/listview"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view" />
</RelativeLayout>