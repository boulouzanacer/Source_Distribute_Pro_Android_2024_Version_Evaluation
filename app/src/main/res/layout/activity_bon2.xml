<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="com.safesoft.proapp.distribute.activities.vente.ActivityBon2">

    <RelativeLayout
        android:id="@+id/entete_produit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/contentDividerLine"
        android:padding="5dp">

        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/textview2"
            android:text="@string/produits"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/textview3"
            android:text="@string/quantite"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />


        <TextView
            android:id="@+id/textview3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="@string/p_u"
            android:textAlignment="center"
            android:textStyle="bold" />

    </RelativeLayout>
    <View
        android:background="@color/vert"
        android:layout_below="@+id/entete_produit"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/view" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view"
        android:layout_marginTop="2dp" />
</RelativeLayout>