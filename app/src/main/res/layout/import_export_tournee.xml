<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:visibility="gone"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rlt_import_tournees"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="visible"
        android:onClick="onRelativeClick"
        android:background="@drawable/import_export_selector"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/importt_commande"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Importation tournees (Réseaux IP)"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black_overlay"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ça vous permet d'importer list des tournees depuis le serveur distant"
            android:layout_below="@+id/importt_commande"
            android:textSize="12sp"
            android:clickable="false"
            android:textColor="@color/gray"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlt_export_tournees"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="visible"
        android:onClick="onRelativeClick"
        android:background="@drawable/import_export_selector"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/exportt_commande"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Exportation tournees (Réseaux IP)"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black_overlay"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ça vous permet d'exporter les tournees vers le serveur distant"
            android:layout_below="@+id/exportt_commande"
            android:textSize="12sp"
            android:clickable="false"
            android:textColor="@color/gray"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlt_exported_commandes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="visible"
        android:onClick="onRelativeClick"
        android:background="@drawable/import_export_selector"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">


        <TextView
            android:id="@+id/exportted_commande"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Les tournees exportés"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black_overlay"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exportted_commande"
            android:layout_alignParentStart="true"
            android:clickable="false"
            android:text="ça vous permet de consulter les tournees déja exportés avec la possibilité de suppression"
            android:textColor="@color/gray"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>