<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/root_item_addproduct"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/produit"
            android:layout_width="107dp"
            android:layout_height="60dp"
            android:layout_above="@+id/quantite_set"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-19dp"
            android:layout_marginTop="0dp"
            android:layout_toStartOf="@+id/rtv_qte_rest"
            android:layout_toEndOf="@+id/circle_check_box"
            android:text="nom produit"
            android:textSize="14dp" />

        <RelativeLayout
            android:id="@+id/rtv_qte_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/quantite_set"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="149dp"
            android:layout_marginBottom="6dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/qte_r_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:text="QTE REST"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/qte_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:text="0" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/photo_pro"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/photo_pr"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="PRIX U"
                android:textColor="@color/gray" />


        </RelativeLayout>
        <CheckBox
            android:id="@+id/circle_check_box"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:button="@drawable/xml_button" />

        <LinearLayout
            android:id="@+id/quantite_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circle_check_box"
            android:layout_alignParentStart="true"
            android:layout_toEndOf="@+id/circle_check_box">

            <RelativeLayout
                android:id="@+id/a"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/prix_u_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRIX U"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/prix_u"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:text="5000.00DA" />

            </RelativeLayout>



            <Button
                android:id="@+id/btnDec"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:background="@color/rouge"
                android:text="-"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/qte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@+id/btnInc"
                android:inputType="numberDecimal|numberSigned"
                android:text="0" />

            <Button
                android:id="@+id/btnInc"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@color/vert_clair"
                android:text="+"
                android:textSize="18dp" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rtv_total"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:padding="5dp">

            <TextView
                android:id="@+id/total_text"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/total_produit"

                android:layout_alignTop="@+id/total_produit"
                android:layout_marginLeft="-79dp"
                android:layout_marginTop="0dp"
                android:text="TOTAL"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/total_produit"
                android:layout_width="243dp"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="1dp"
                android:text="3500.00DA" />


        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>