<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    tools:context="com.safesoft.proapp.distribute.activities.transfert.ActivityTransfert">

    <TextView
        android:id="@+id/produit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/quantite"
        android:text="@string/produit" />

    <TextView
        android:id="@+id/quantite"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/prix_u"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/quantite"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/prix_u"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/p_u"

        android:textAlignment="viewEnd" />
</RelativeLayout>
