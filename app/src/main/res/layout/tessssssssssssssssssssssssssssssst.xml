<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:weightSum="10"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Linear_Layout_Header_bon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="3"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:id="@+id/LayoutButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="3"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/btn_add_client"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:background="@drawable/button_bg"
                android:maxLines="1"
                android:onClick="onClickEvent"
                android:text="Ajouter"
                android:textColor="@color/white"
                app:icon="@drawable/ic_baseline_person_add_24"
                tools:ignore="NestedWeights"
                tools:targetApi="o" />

            <Button
                android:id="@+id/btn_qr_code_client"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:background="@drawable/button_bg"
                android:maxLines="1"
                android:onClick="onClickEvent"
                android:text="Scan"
                android:textColor="@color/white"
                app:icon="@drawable/ic_qrcode"
                tools:targetApi="o" />

            <Button
                android:id="@+id/btn_obs"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:background="@drawable/button_bg"
                android:onClick="onClickEvent"
                android:text="@string/str_add_obs"
                android:textColor="@color/white"
                app:icon="@drawable/ic_baseline_info_24"
                tools:ignore="RelativeOverlap,SmallSp,UsingOnClickInXml,TextContrastCheck"
                tools:targetApi="o" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_cl_nom"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="3"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/stockavantLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:contextClickable="false"
                android:hint="@string/nom_client"
                app:errorMessage="@string/error_message_empty"
                app:errorType="empty"
                android:layout_marginEnd="5dp"
                app:helperText="  "
                app:expandedHintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/client"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/nom_client"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="none"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="3"
                android:orientation="vertical">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/mode_tarif_text"
                    style="@style/TitleBadgeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="@color/blue"
                    android:text="@string/mode_tarif_text"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    tools:ignore="TextContrastCheck" />
                <TextView
                    android:layout_weight="2"
                    android:id="@+id/mode_tarif"
                    style="@style/TitleBadgeText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/layout_btn_produit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="2"
            tools:ignore="MissingConstraints">
            <Button
                android:layout_weight="1"
                android:id="@+id/addProduct_scan"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:background="@drawable/button_bg"
                android:onClick="onClickEvent"
                android:layout_marginEnd="3dp"
                android:text="@string/produit"
                android:textColor="@color/white"
                app:icon="@drawable/ic_qrcode"
                tools:ignore="RelativeOverlap,UsingOnClickInXml,TextContrastCheck"
                tools:targetApi="o" />
            <Button
                android:layout_weight="1"
                android:id="@+id/addProduct"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="0dp"
                android:layout_marginStart="3dp"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:background="@drawable/button_bg"
                android:onClick="onClickEvent"
                android:text="@string/produit"
                android:textColor="@color/white"
                app:icon="@drawable/add_product"
                tools:ignore="RelativeOverlap,UsingOnClickInXml,TextContrastCheck"
                tools:targetApi="o" />

        </LinearLayout>

    </LinearLayout>






    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/contraint_footer"
        app:layout_constraintTop_toBottomOf="@+id/Linear_Layout_Header_bon">
        <include layout="@layout/layout_list_produit_vente"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contraint_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp">


        <TableLayout
            android:id="@+id/tl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">

            <TableRow
                android:visibility="gone"
                android:id="@+id/tr_header"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/table_row_bg"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    android:paddingEnd="10dp"
                    android:text="@string/total_ht"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/total_ht"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:textStyle="bold"
                    android:text="@string/_0_00_da"
                    tools:ignore="RtlSymmetry" />

            </TableRow>

            <TableRow
                android:visibility="gone"
                android:id="@+id/tr_item_1"
                android:layout_height="0dp"
                android:background="@drawable/table_row_bg"
                android:layout_width="match_parent"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_product_item_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tva_badje"
                    android:textStyle="bold"
                    android:background="@drawable/table_cell_bg"
                    android:paddingEnd="10dp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0_00_da"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:paddingLeft="10dp"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />

            </TableRow>

            <TableRow
                android:visibility="gone"
                android:id="@+id/tr_item_5"
                android:background="@drawable/table_row_bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_product_item_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/timbre"
                    android:textStyle="bold"
                    android:background="@drawable/table_cell_bg"
                    android:paddingEnd="10dp"
                    tools:ignore="RtlSymmetry" />

                <CheckBox
                    android:id="@+id/checkbox_timbre"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/timbre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0_00_da"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="end"
                    tools:ignore="RtlSymmetry" />

            </TableRow>

            <TableRow
                android:id="@+id/tr_item_2"
                android:background="@drawable/table_row_last_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_product_item_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_ttc"
                    android:textStyle="bold"
                    android:background="@drawable/table_cell_bg"
                    android:paddingEnd="10dp"
                    tools:ignore="RtlSymmetry" />


                <TextView
                    android:id="@+id/total_ttc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0_00_da"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:paddingLeft="10dp"
                    tools:ignore="RtlHardcoded,RtlSymmetry"  />

            </TableRow>


            <TableRow
                android:id="@+id/tr_item_3"
                android:background="@drawable/table_row_bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="visible"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_product_item_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    android:paddingEnd="10dp"
                    android:text="@string/remise"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/txv_remise_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:onClick="onClickEvent"
                    android:text="@string/modifier"
                    android:textColor="@color/blue"
                    tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck,TextContrastCheck" />

                <TextView
                    android:id="@+id/txv_remise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0_00_da"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="end"
                    tools:ignore="RtlSymmetry" />

            </TableRow>


            <TableRow
                android:id="@+id/tr_item_4"
                android:background="@drawable/table_row_last_bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="visible"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_product_item_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ttc_a_payer"
                    android:textStyle="bold"
                    android:background="@drawable/table_cell_bg"
                    android:paddingEnd="10dp"
                    tools:ignore="HardcodedText,RtlSymmetry" />


                <TextView
                    android:id="@+id/total_ttc_remise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0_00_da"
                    android:textStyle="bold"
                    android:paddingStart="15dp"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="end"
                    tools:ignore="RtlSymmetry" />
            </TableRow>

        </TableLayout>





        <LinearLayout
            android:weightSum="3"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/tl">

            <Button
                android:id="@+id/valide_facture"
                style="@style/Widget.Material3.Button.Icon"
                app:icon="@drawable/ic_baseline_check_24"
                android:layout_width="0dp"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:onClick="onClickEvent"
                android:text="@string/valider"
                android:textColor="@color/white"
                android:autoSizeTextType ="uniform"
                tools:targetApi="o"/>

            <Button
                android:id="@+id/btn_mofifier_bon"
                style="@style/Widget.Material3.Button.Icon"
                app:icon="@drawable/ic_baseline_edit_24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:background="@drawable/button_bg"
                android:onClick="onClickEvent"
                android:text="@string/modifier"
                android:textColor="@color/white"
                android:autoSizeTextType ="uniform"
                tools:targetApi="o"/>

            <Button
                android:id="@+id/btn_imp_bon"
                style="@style/Widget.Material3.Button.Icon"
                app:icon="@drawable/ic_baseline_print_24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:onClick="onClickEvent"
                android:text="@string/imprimer"
                android:textColor="@color/white"
                android:autoSizeTextType ="uniform"
                tools:targetApi="o" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
