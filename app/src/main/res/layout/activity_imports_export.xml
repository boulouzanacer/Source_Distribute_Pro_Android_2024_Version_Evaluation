<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.safesoft.proapp.distribute.activities.ActivityImportsExport">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/myToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:titleEnabled="false"
        tools:navigationIcon="@drawable/ic_arrow_back_24" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/parametre_rounded"
                android:text="@string/syncronisation"
                android:textColor="@color/accent"
                android:textStyle="italic" />

            <include layout="@layout/import_export_produit_client" />

            <Button
                android:id="@+id/bt2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/parametre_rounded"
                android:text="@string/achats"
                android:textColor="@color/accent"
                android:textStyle="italic" />

            <include layout="@layout/import_export_achat" />

            <Button
                android:id="@+id/bt3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/parametre_rounded"
                android:text="@string/vente"
                android:textColor="@color/accent"
                android:textStyle="italic" />

            <include layout="@layout/import_export_vente" />

            <Button
                android:id="@+id/bt4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/parametre_rounded"
                android:text="@string/commande"
                android:textColor="@color/accent"
                android:textStyle="italic" />

            <include layout="@layout/import_export_commande" />

            <Button
                android:id="@+id/bt5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/parametre_rounded"
                android:text="@string/inventaire"
                android:textColor="@color/accent"
                android:textStyle="italic" />

            <include layout="@layout/import_export_inventaire" />

            <Button
                android:id="@+id/bt6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/parametre_rounded"
                android:text="TOURNEE"
                android:textColor="@color/accent"
                android:textStyle="italic" />

            <include layout="@layout/import_export_tournee" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
