<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.safesoft.proapp.distribute.activities.ActivityVersement">

    <TextView
        android:text="Versement"
        android:textAlignment="center"
        android:textSize="30dp"
        android:padding="15dp"
        android:textStyle="bold"
        android:textColor="@color/rouge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/lnr_ancien"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ancien_solde_text"
            android:text="Ancien solde : "
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textAlignment="textEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TextView>

        <TextView
            android:id="@+id/ancien_solde"
            android:text="2000.00 DA"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnr_montant_bon"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/montant_bon_text"
            android:text="Montant bon : "
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/montant_bon"
            android:text="1500.00 DA"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnr_actuel"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/current_sold_text"
            android:text="Solde Actuel :"
            android:layout_below="@+id/montant_bon"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/current_sold"
            android:text="500.00 DA"
            android:textAlignment="textEnd"
            android:layout_below="@+id/montant_bon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.emmasuzuki.easyform.EasyTextInputLayout
        android:id="@+id/versement_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorMessage="@string/error_message_empty"
        android:inputType="numberDecimal"
        android:hint="montant à verser"
        app:errorType="empty"
        android:layout_below="@+id/current_sold"
        android:layout_alignLeft="@+id/adresse_client_check_edittext"
        android:layout_alignStart="@+id/adresse_client_check_edittext" />

    <LinearLayout
        android:id="@+id/lnr_nouveau_sold"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/new_sold_text"
            android:text="Nouveau Solde :"
            android:layout_below="@+id/versement_edittext"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/new_sold"
            android:text="0.00 DA"
            android:textAlignment="textEnd"
            android:layout_below="@+id/versement_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnr_over_sold"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/message_oversold1"
            android:text="Attesntion : Limitation de credit"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/red_btn_bg_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/message_oversold2"
            android:text="Le nouveau solde est superieur au credit autorisé"
            android:textAlignment="center"
            android:textColor="@color/orange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/valider"
        android:text="Valider"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/selector_button_validate"
        android:onClick="onClickVersement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/imprimer"
        android:text="Imprimer bon"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:enabled="false"
        android:background="@drawable/selector_button_validate"
        android:onClick="onClickVersement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
